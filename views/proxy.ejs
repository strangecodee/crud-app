<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Proxy Tester</title>
    <link href="./output.css" rel="stylesheet" />
  </head>

  <body class="bg-gray-100">
    <div class="max-w-2xl mx-auto mt-12 fade-in-up px-4">
      <a href="/">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="#2563eb"
          class="size-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"
          />
        </svg>
      </a>
      <h1
        class="text-center text-3xl font-bold mb-6 flex justify-center items-center gap-2"
      >
        <!-- Heroicons globe -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-8 text-blue-600"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
          />
        </svg>
        Proxy Tester
      </h1>

      <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <div class="mb-4">
          <label class="text-gray-700 font-bold mb-2 flex items-center gap-1">
            <!-- Heroicons link -->
            <svg
              class="size-4 text-blue-600"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244"
              />
            </svg>

            Enter URL to Test
          </label>
          <div class="flex gap-2">
            <input
              type="url"
              id="proxyUrl"
              placeholder="https://httpbin.org/get"
              required
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg"
            />
            <button
              onclick="testProxy()"
              class="flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg text-lg transition-colors"
            >
              <!-- Heroicons rocket -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-5 text-white"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
                />
              </svg>

              Test Proxy
            </button>
          </div>
          <p class="text-gray-500 mt-2 text-sm">
            Try URLs like: <code>https://httpbin.org/get</code>,
            <code>https://jsonplaceholder.typicode.com/posts/1</code>
          </p>
        </div>

        <div id="loadingSpinner" class="text-center hidden">
          <svg
            class="animate-spin h-8 w-8 text-blue-600 mx-auto"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"
            ></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"
            ></path>
          </svg>
          <p class="mt-2 font-bold">Testing proxy connection...</p>
        </div>

        <div
          id="proxyResult"
          class="proxy-result hidden mt-4 bg-gray-50 p-4 rounded-lg"
        >
          <h6 class="font-bold mb-2 flex items-center gap-1">
            <!-- Heroicons clipboard-document -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-blue-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9 12h6m-6 4h6m2 4H7a2 2 0 01-2-2V7a2 2 0 012-2h4l2-2 2 2h4a2 2 0 012 2v11a2 2 0 01-2 2z"
              />
            </svg>
            Response:
          </h6>
          <div id="resultContent" class="whitespace-pre-wrap text-sm"></div>
        </div>
      </div>
    </div>

    <script>
      async function testProxy() {
        const url = document.getElementById("proxyUrl").value;
        const resultDiv = document.getElementById("proxyResult");
        const loader = document.getElementById("loadingSpinner");

        if (!url) return alert("⚠️ Please enter a valid URL.");

        loader.classList.remove("hidden");
        resultDiv.classList.add("hidden");

        try {
          const response = await fetch(`/proxy/${encodeURIComponent(url)}`);
          const content = response.ok
            ? await response.text()
            : (await response.json()).error;

          resultDiv.innerHTML = `<strong>Status:</strong> ${
            response.status
          }<br><pre>${content.substring(0, 900)}...</pre>`;
          resultDiv.classList.remove("hidden");
        } catch (err) {
          resultDiv.innerHTML = `❌ Error: ${err.message}`;
          resultDiv.classList.remove("hidden");
        }
        loader.classList.add("hidden");
      }
    </script>
  </body>
</html>
