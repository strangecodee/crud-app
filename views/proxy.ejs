<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Proxy Tester</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body class="bg-light">

  <div class="container-custom fade-in-up">
    <h1 class="text-center mb-4">
      <i class="bi bi-globe text-primary me-2"></i>
      Proxy Tester
    </h1>

    <div class="card p-4 mb-4">
      <div class="mb-4">
        <label class="form-label fw-bold">
          <i class="bi bi-link-45deg text-primary me-1"></i>
          Enter URL to Test
        </label>
        <div class="input-group">
          <input type="url" id="proxyUrl" class="form-control form-control-lg" placeholder="https://httpbin.org/get" required />
          <button class="btn btn-primary btn-lg" onclick="testProxy()">
            <i class="bi bi-rocket-takeoff-fill me-2"></i>
            Test Proxy
          </button>
        </div>
        <div class="form-text">
          Try URLs like: <code>https://httpbin.org/get</code>, <code>https://jsonplaceholder.typicode.com/posts/1</code>
        </div>
      </div>

      <div id="loadingSpinner" class="text-center d-none">
        <div class="spinner-border spinner-border-lg"></div>
        <p class="mt-2 fw-bold">Testing proxy connection...</p>
      </div>

      <div id="proxyResult" class="proxy-result d-none">
        <h6 class="fw-bold mb-3">
          <i class="bi bi-clipboard-data text-primary me-1"></i>
          Response:
        </h6>
        <div id="resultContent"></div>
      </div>
    </div>

    <div class="text-center">
      <a href="/" class="nav-link">← Back to Dashboard</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    async function testProxy() {
      const url = document.getElementById('proxyUrl').value;
      const resultDiv = document.getElementById('proxyResult');
      const loader = document.getElementById('loadingSpinner');

      if (!url) return alert("⚠️ Please enter a valid URL.");

      loader.classList.remove('d-none');
      resultDiv.classList.add('d-none');

      try {
        const response = await fetch(`/proxy/${encodeURIComponent(url)}`);
        const content = response.ok
          ? await response.text()
          : (await response.json()).error;

        resultDiv.innerHTML = `<strong>Status:</strong> ${response.status}<br><pre>${content.substring(0, 900)}...</pre>`;
        resultDiv.classList.remove('d-none');
      } catch (err) {
        resultDiv.innerHTML = `❌ Error: ${err.message}`;
        resultDiv.classList.remove('d-none');
      }
      loader.classList.add('d-none');
    }
  </script>
</body>
</html>
